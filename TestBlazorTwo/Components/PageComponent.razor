<div class="row col-12">
    <span @onclick=Toggle class="@CssClass"></span>
    @if (!Collapsed)
    {
        @ChildContent
    }
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool Collapsed { get; set; }

    private string CssClass { get => Collapsed ? "caret up" : "caret down"; }

    void Toggle()
    {
        Collapsed = !Collapsed;
    }
}
